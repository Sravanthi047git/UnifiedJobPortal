
<link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src = "https://code.jquery.com/jquery-3.5.1.js" > </script>
<script src = "https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js" > </script>

<table id="jobtable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>S.N</th>
                <th>Job Title</th>
                <th>Company</th>
                <th>Location</th>
                <th>Posted Date</th>
                <th>Job Site</th>
                <th>Url</th>
            </tr>
        </thead>
        <tbody>
            <%
            if(joblist.length!=0){
            var i=1;
            joblist.forEach(function(data){
            %>
            <tr>
                <td><%=i; %></td>
                <td><%=data.title %></td>
                <td><%=data.company %></td>
                <td><%=data.location %></td>
                <td><%=data.posteddate %></td>
                <td><%=data.portal %></td>
                <td><a href="<%=data.url%>">url</a></td>
            </tr>
            <%  i++; }) %>
            <% } else{ %>
                <tr>
                    <td colspan="7">No Data Found</td>
                </tr>
            <% } %>
        </tbody>
    </table>


<script>
$(document).ready(function() {
    $('#jobtable').DataTable( {
        "pagingType": "full_numbers",
          "columns": [
            { "width": "5%" },
            { "width": "20%" },
            { "width": "20%" },
            { "width": "20%" },
            { "width": "15%" },
            { "width": "10%" },
            { "width": "10%" }
          ]
    } );
} );

</script>